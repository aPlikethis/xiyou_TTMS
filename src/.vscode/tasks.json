
{
    "version": "2.0.0",
    "command": "gcc",
    "args": [
        "-g",
        "${file}",
        "${fileDirname}\\View\\Main_Menu.c",
        "${fileDirname}\\View\\Studio_UI.c",
        "${fileDirname}\\View\\Seat_UI.c",
        "${fileDirname}\\View\\Main_Menu.h",
        "${fileDirname}\\View\\Studio_UI.h",
        "${fileDirname}\\View\\Seat_UI.h",
        "-o",
        "${fileBasenameNoExtension}.exe"
    ], // 编译命令参数
    "problemMatcher": {
        "owner": "cpp",
        "fileLocation": [
            "relative",
            "//"
        ],
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "severity": 4,
            "message": 5
        }
    }
 }